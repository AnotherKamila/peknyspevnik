.songs-list
	li[data-match-quality="medium"]
		opacity: 0.7
	li[data-match-quality="low"]
		opacity: 0.4

.song-text
	white-space: pre
	line-height: 1.6

	&.multicolumn
		columns: 20em
		-webkit-column-fill: auto
		column-fill: auto
	.stanza
		margin: 1em 0
		column-break-inside: avoid

	.chord
		display: inline-block
		overflow: visible
		position: relative
		top: -0.7em
		font-size: 0.72em
		font-variant: small-caps
		font-weight: bold
