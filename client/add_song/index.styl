#add-song-form
	padding: 2em 0 0 0
	fieldset
		border: none
		padding: 0
		margin: 0
	legend.divide
		text-align: center
		color: color_lightgray
		width: 100%
		position: relative
		font-variant: small-caps
		font-weight: bold
		margin: 1em 0
		padding: 0
		span
			background: #fff
			padding: 0 0.6em
		&:before
			position: absolute
			top: 0.68em
			z-index: -1
			content: ''
			display: block
			width: 100%
			border-bottom: 1px solid color_lightgray

	#text-container
	textarea
	input[type="text"]
		border: 1px solid color_lightgray
		&:focus
			outline: 0
			border-color: color_focused
	#text-container.focus
		border-color: color_focused
	input[type="text"]
		display: inline-block
		margin: 1em 0
		box-sizing: border-box
		padding: 0.3em 0.7em
		width: 48%
		font-size: 0.8em
	#author
		float: left
	#title
		float: right

	#text-container
		padding: 0.7em
		height: 40em
		clear: both
		font-size: .8em
	#preview
	textarea
		padding: 0
		margin: 0
		display: block
		box-sizing: border-box
		width: 50%
		height: 100%
		overflow: auto
	textarea
		border: 0
		border-right: 1px solid color_lightgray
		float: left
	#preview
		columns: 2
		padding: 0 0 0 0.7em
		float: right

	input[type="submit"]
		position: relative
		top: 0
		left: 0
		display: block
		width: 6em
		padding: 0.5em
		margin: 1em auto 0 auto
		text-align: center
		font-weight: bold
		color: #fff
		text-transform: uppercase
		background: color_focused
		border-radius: 3em
		border: 0
		cursor: pointer
		&:active
			box-shadow: inset 0 1px 3px rgba(0,0,0,0.4)
